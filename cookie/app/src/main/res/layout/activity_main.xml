<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.binguses.jerry.gui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffc9fe">

        <TextView
            android:id="@+id/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70sp"
            android:textSize="50sp"
            android:text="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_largetext"
            android:paddingVertical="10sp"
            android:paddingHorizontal="15sp"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200sp"
            android:padding="16sp"
            android:text="@string/start"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_buttonz"/>

        <Button
            android:id="@+id/dailyFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_buttonz"
            android:onClick="goToDailyFood"
            android:padding="16sp"
            android:text="Today's Food"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>